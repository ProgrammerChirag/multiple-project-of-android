<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="4"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/white"
    >
    <ImageView
        android:src="@drawable/insta1"
        android:layout_gravity="center"
        android:dropDownSelector="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        ></ImageView>
    <ImageView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:src="@drawable/insta"
        ></ImageView>
<LinearLayout
    android:orientation="vertical"
    android:weightSum="3.2"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.4"
    >
    <EditText
        android:fontFamily="@font/amiko"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:padding="10dp"
        android:hint="Phone number,email or username"
        android:background="@drawable/mystyle1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:layout_marginBottom="20dp"
        android:textSize="15dp"
        ></EditText>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@drawable/mystyle1"
        android:fontFamily="@font/amiko"
        android:hint="Password"
        android:padding="10dp"></EditText>
    <Button
        android:background="@drawable/mystyle2"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:text="Log In"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></Button>

</LinearLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:weightSum="2"
        >
        <Button
            android:textAllCaps="false"
            android:textSize="11dp"
            android:background="@android:color/transparent"
            android:text="Forgotten your login details?"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            ></Button>
        <Button
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:text=" Get help with signing in."
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textAlignment="textStart"
            ></Button>

    </LinearLayout>


        <Button
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/fb"
            android:textColor="@color/mycolor"
            android:layout_marginLeft="30dp"
            android:text="Log In With Facebook"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="center"
            ></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:weightSum="3"
        android:orientation="horizontal"
        >
        <View
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/mycolor2"
            android:layout_weight="1.35"
            ></View>
        <TextView
            android:layout_margin="2dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="OR"
            ></TextView>
        <View
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@color/mycolor2"
            android:layout_weight="1.35"
            ></View>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:weightSum="2"
        >
        <Button
            android:textAllCaps="false"
            android:textSize="13dp"
            android:background="@android:color/transparent"
            android:text="Don't have an account?"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:textAlignment="textEnd"
            ></Button>
        <Button
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:text="Sign up"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textAlignment="textStart"
            ></Button>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/mycolor2"
        android:layout_margin="20dp"
        ></View>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Instagram from facebook"
        ></TextView>
</LinearLayout>