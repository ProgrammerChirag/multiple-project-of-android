<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="2"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        ></ScrollView>
    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.35"
        android:weightSum="6"
        >
        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <EditText
                android:background="@drawable/style4"
                android:maxLength="15"
                android:text="0"
                android:textSize="40dp"
                android:textAlignment="center"
                android:id="@+id/number"
                android:inputType="phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                ></EditText>
            <ImageView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:src="@drawable/ic_cancel_black_24dp"
                ></ImageView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"
            ></View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:weightSum="3"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3"
                >
                <Button
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="#25CCF7"
                    android:textSize="40dp"
                    android:background="@android:color/transparent"
                    ></Button>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:text="2"
                    android:textStyle="bold"
                    android:textColor="#25CCF7"
                    android:textSize="40dp"
                    android:background="@android:color/transparent"
                    ></Button>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:textAlignment="center"
                    android:text="ABC"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:text="3"
                    android:textStyle="bold"
                    android:textColor="#25CCF7"
                    android:textSize="40dp"
                    android:background="@android:color/transparent"
                    ></Button>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:textAlignment="center"
                    android:text="DEF"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:weightSum="3"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:text="4"
                    android:textStyle="bold"
                    android:textColor="#25CCF7"
                    android:textSize="40dp"
                    android:background="@android:color/transparent"
                    ></Button>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:text="GHI"
                    android:textAlignment="center"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:text="5"
                    android:textStyle="bold"
                    android:textColor="#25CCF7"
                    android:textSize="40dp"
                    android:background="@android:color/transparent"
                    ></Button>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:textAlignment="center"
                    android:text="JKL"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/six"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:text="6"
                    android:textStyle="bold"
                    android:textColor="#25CCF7"
                    android:textSize="40dp"
                    android:background="@android:color/transparent"
                    ></Button>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:textAlignment="center"
                    android:text="MNO"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:weightSum="3"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/seven"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:text="7"
                    android:textStyle="bold"
                    android:textColor="#25CCF7"
                    android:textSize="40dp"
                    android:background="@android:color/transparent"
                    ></Button>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:text="PQRS"
                    android:textAlignment="center"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/eight"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:text="8"
                    android:textStyle="bold"
                    android:textColor="#25CCF7"
                    android:textSize="40dp"
                    android:background="@android:color/transparent"
                    ></Button>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:textAlignment="center"
                    android:text="TUV"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/nine"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.4"
                    android:text="9"
                    android:textStyle="bold"
                    android:textColor="#25CCF7"
                    android:textSize="40dp"
                    android:background="@android:color/transparent"
                    ></Button>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:textAlignment="center"
                    android:text="WXYZ"
                    ></TextView>
            </LinearLayout>
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.7"
    android:orientation="horizontal"
    android:weightSum="3"
    >
    <Button
        android:id="@+id/star"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="*"
        android:background="@android:color/transparent"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        ></Button>

    <Button
        android:id="@+id/zero"
        android:textColor="#25CCF7"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="0"
        android:background="@android:color/transparent"
        android:textSize="40dp"
        ></Button>

    <Button
        android:id="@+id/hash"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="#"
        android:background="@android:color/transparent"
        android:textSize="40dp"
        ></Button>

</LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            ></LinearLayout>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="80dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            >
            <ImageView
                android:id="@+id/call"
                android:background="@drawable/my"
                android:src="@drawable/ic_call_black_24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></ImageView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>