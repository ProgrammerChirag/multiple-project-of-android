<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        >
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sqllite"
                ></ImageView>
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <EditText
                    android:inputType="number"
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mystyle"
                    android:hint="Enter your unique id"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:padding="10dp"
                    ></EditText>

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mystyle"
                    android:hint="Enter Student Name"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    ></EditText>

                <EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mystyle"
                    android:hint="Enter Student Registered email"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    ></EditText>
                <EditText
                    android:inputType="number"
                    android:id="@+id/coursecount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mystyle"
                    android:hint="Enter Course Count"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    ></EditText>
            </LinearLayout>
            <Button
                android:id="@+id/create"
                android:text="create"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/mystyle2"
                android:layout_marginBottom="10dp"
                ></Button>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/black"
                ></View>
            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/view"
                    android:layout_margin="5dp"
                    android:text="view"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#2183C4"
                    ></Button>
                <Button
                    android:id="@+id/viewall"
                    android:layout_margin="5dp"
                    android:text="view all"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#2183C4"
                    ></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/delete"
                    android:layout_margin="5dp"
                    android:text="delete"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#2183C4"
                    ></Button>
                <Button
                    android:id="@+id/update"
                    android:layout_margin="5dp"
                    android:text="update"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#2183C4"
                    ></Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>