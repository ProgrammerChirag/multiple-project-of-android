<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addnotes">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        android:background="@android:color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4"
            >
            <TextView
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD YOUR NOTICE"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/mystyle3"
                android:padding="10dp"
                ></TextView>
            <ImageView
                android:layout_marginLeft="130dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/notice"
                ></ImageView>
            <EditText
                android:id="@+id/name_add_notes"
                android:inputType="textPersonName"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mystyle1"
                android:textColor="@android:color/black"
                android:hint="Enter your name"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:padding="20dp"
                ></EditText>
            <EditText
                android:inputType="text"
                android:id="@+id/title_add_notes"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mystyle1"
                android:textColor="@android:color/black"
                android:hint="Enter title for notice"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textSize="15dp"
                android:padding="20dp"
                ></EditText>
            <EditText
                android:id="@+id/description_add_notes"
                android:inputType="textMultiLine"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/mystyle1"
                android:textColor="@android:color/black"
                android:hint="Enter notice"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textSize="15dp"
                android:padding="20dp"
                ></EditText>
            <Button
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:id="@+id/submit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/mystyle2"
                android:textColor="@android:color/white"
                android:text="Submit"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"
                ></Button>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>