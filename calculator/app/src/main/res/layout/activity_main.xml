<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:weightSum="8"
    android:background="@android:color/black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_weight="1.4"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/screen"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="60dp"
            android:textColor="@android:color/white"
            ></TextView>
    <TextView
        android:maxLength="8"
        android:id="@+id/input"
        android:textColorHighlight="@android:color/white"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textAlignment="viewEnd"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="50dp"
        android:textColor="@android:color/white"
        android:text="0"
        android:inputType="numberDecimal"
        android:layout_weight="1.4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        ></TextView>
    </LinearLayout>

        <TextView
            android:maxLength="15"
            android:scrollHorizontally="true"
            android:id="@+id/result"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="60dp"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:textAlignment="viewEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ></TextView>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        >
        <Button
            android:id="@+id/ac"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:textColor="#EEC213"
            android:text="AC"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/del"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:textColor="#EEC213"
            android:text="del"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/extra"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="+/-"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/devide"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="/"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        >
        <Button
            android:id="@+id/seven"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="7"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/eight"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="8"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/nine"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="9"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/X"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="X"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        >
        <Button
            android:id="@+id/four"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="4"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/five"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="5"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/six"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="6"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/subtraction"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:text="-"
            android:textSize="50dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        >
        <Button
            android:id="@+id/one"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="1"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/two"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="2"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/three"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="3"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/plu"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="+"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.15"
        >
        <Button
            android:id="@+id/percent"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="%"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/zero"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="0"
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/dot"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:text="."
            android:textSize="40dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
        <Button
            android:id="@+id/equal"
            android:layout_margin="2dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:text="="
            android:textColor="#EEC213"
            android:textSize="30dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            ></Button>
    </LinearLayout>
</LinearLayout>