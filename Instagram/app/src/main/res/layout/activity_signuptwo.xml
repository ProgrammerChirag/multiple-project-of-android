<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@android:color/black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signuptwo">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="30dp"
        android:text="Add Phone number or email address"
        ></TextView>
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            >
            <TextView
                android:id="@+id/num"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="@android:color/white"
                android:text="PHONE NUMBER"
                android:textSize="15dp"
                ></TextView>
            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/white"
                ></View>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            >
            <TextView
                android:id="@+id/mail_address"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="#99AAAB"
                android:text="EMAIL ADDRESS"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                ></TextView>
            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/white"
                ></View>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <EditText
            android:id="@+id/email"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mstyle"
            android:hint="Email Address"
            android:textColorHint="@android:color/white"
            android:textSize="14dp"
            android:padding="16dp"
            ></EditText>
        <LinearLayout
            android:id="@+id/phone_number"
            android:background="@drawable/mstyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:id="@+id/code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:textSize="12dp"
                android:text="IN +91"
                android:padding="20dp"
                android:textColor="#DAE0E2"
                ></TextView>
            <EditText
                android:maxLength="10"
                android:background="@drawable/mstyle"
                android:id="@+id/phone"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:hint="Phone number"
                android:textColor="@android:color/white"
                android:textColorHint="#99AAAB"
                android:textSize="14dp"
                android:padding="16dp"
                ></EditText>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="You may recieve SMS updates from Instagram and can"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:textAlignment="center"
        android:text="opt out at any time."
        ></TextView>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20dp"
        android:padding="15dp"
        android:background="@drawable/mstyle2"
        android:text="Next"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        ></Button>

</LinearLayout>